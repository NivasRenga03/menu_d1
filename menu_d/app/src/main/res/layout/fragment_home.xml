<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Craft Image -->
        <ImageView
            android:id="@+id/craftImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/craft_image_placeholder"
            android:contentDescription="@string/craft_image_description"
            android:layout_marginBottom="16dp"/>

        <!-- Craft Title -->
        <TextView
            android:id="@+id/craftTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/craft_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Craft Description -->
        <TextView
            android:id="@+id/craftDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/craft_description"
            android:textSize="16sp"
            android:lineSpacingExtra="4sp"
            android:layout_marginBottom="16dp"/>

        <!-- Materials Needed -->
        <TextView
            android:id="@+id/materialsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/materials_needed"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/materialsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/materials_list"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <!-- Instructions -->
        <TextView
            android:id="@+id/instructionsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/instructions"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/instructionsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/instructions_list"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <!-- Start Craft Button -->
        <Button
            android:id="@+id/startCraftButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_craft"
            android:textSize="18sp"
            android:padding="12dp"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>